--base tab

function _init()
 cls(1)
 mode="menu"
end

function _update()
 if mode=="game" then
  update_game()
 elseif mode=="menu" then
  update_menu()
 elseif mode=="over" then
  update_over()
 end
end

function _draw()
 if mode=="game" then
  draw_game()
 elseif mode=="menu" then
  draw_menu()
  elseif mode=="over" then
  draw_over()
 end
end
