-- game tab

function update_game() --update
 if btnp(1) then
  curx=curx+9	
 end
 if btnp(0) then
  curx=curx-9
 end
 if btnp(2) then
  cury=cury-9
 end
 if btnp(3) then
  cury=cury+9
 end
end

function draw_game() --draw
  cls(11)
  i=1
  repeat
   line((9 * i)-8,0,(9 * i)-8,127,3)
   i=i+1
  until i==16
  i=1
  repeat
   line(0,(9 * i)-8,127,(9 * i)-8,3)
   i=i+1
  until i==16
  spr(1,curx,cury)
end

function start_game() --init
  mode="game"
  curx=65
  cury=56
end
